{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "removeComments": true,
    "lib": ["ESNext", "dom"],
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./build"
  },
  "include": ["**/*.ts", "**/*.mts"],
  "exclude": ["**/*.test.ts", "node_modules", "build", "*.config.ts"],
  "compileOnSave": true
}
